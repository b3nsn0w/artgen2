html, body, .art-container
  height 100%

body
  margin 0
  font-family -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif

.art-container
  display flex
  align-items center
  justify-content center
  overflow auto
  
  background-color #eaeaea // the rest of it is all DLCs

.fancy-title
  font-size 48px
  text-align center

  margin-top 20px

.fancy-subtitle
  font-size 20px
  text-align center

  margin-top 8px
  margin-bottom 40px

.canvasbox
  display flex
  flex-direction column
  align-items center
  justify-content center

.art-canvas
  width 80vw
  height 50vh
  box-shadow 0 0 3vw rgba(0, 0, 0, 0.6)

.art-name
  background transparent
  border none
  border-bottom 1px solid rgba(0, 0, 0, 0.6)

  margin 24px 0
  font-size 40px
  width 40vw

  text-align center